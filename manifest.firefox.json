{
    "manifest_version": 3,
    "name": "SideBrain",
    "version": "1.0.3",
    "description": "Automatically infers user needs from the current page, searches the web, and provides a summary.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "scripts": [
            "libs/browser-polyfill.min.js",
            "background.js"
        ]
    },
    "sidebar_action": {
        "default_panel": "sidepanel.html",
        "default_title": "SideBrain"
    },
    "action": {
        "default_title": "Open Contextual Assistant"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "sidebrain@example.com",
            "strict_min_version": "140.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}